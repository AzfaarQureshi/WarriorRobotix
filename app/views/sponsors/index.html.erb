<% if member_is_admin? %>
<%= link_to 'New Sponsor', new_sponsor_path, class: "btn-bordered" %>
<% end %>
<h1 class="flow-text">Listing Sponsors</h1>

<div class="row">
  <% @sponsors.each do |sponsor| %>
  <div class="col s12 l6 sponsor-wrapper">
    <div class="card" style="padding:10px;">
      <div class="card-image waves-effect waves-block waves-light">
        <div class="valign-wrapper">
          <img class="activator valign" src="<%= sponsor.image_link %>">
        </div>
      </div>
      <div class="card-content">
        <div class="card-title activator grey-text text-darken-4" style="height:48px;line-height:48px;vertical-align:middle">
          <% if !sponsor.facebook_link.empty? %>
          <a href="<%= sponsor.facebook_link %>" style="float:left;">
            <img style="height:28px;margin-top:10px;margin-right:10px;" src="<%= asset_path 'fb_icon.gif' %>">
          </a>
          <% end %>
          <% if !sponsor.twitter_link.empty? %>
          <a href="<%= sponsor.twitter_link %>" style="float:left;">
            <img style="height:28px;margin-top:10px;margin-right:10px;" src="<%= asset_path 'twitter_icon.png' %>">
          </a>
          <% end %>
          <a style="" href="<%= sponsor.website_link %>" class="hide-on-med-and-down"><%= sponsor.name %></a>
          <i class="material-icons right hide-on-med-and-down">more_vert</i>
        </div>
      </div>
      <div class="card-reveal">
        <span class="card-title grey-text text-darken-4"><%= sponsor.name %><i class="material-icons right">close</i></span>
        <p><%= sponsor.description %></p>
        <% if !sponsor.facebook_link.empty? %><p><a href="<%= sponsor.facebook_link %>">Facebook</a></p><% end %>
        <% if !sponsor.twitter_link.empty? %><p><a href="<%= sponsor.twitter_link %>">Twitter</a></p><% end %>
        <% if member_is_admin? %>
        <p><%= link_to 'Show', sponsor %> | <%= link_to 'Edit', edit_sponsor_path(sponsor) %> | <%= link_to 'Delete', sponsor, method: :delete, data: { confirm: 'Are you sure?' } %></p>
        <% end %>
      </div>
    </div>
  </div>
  <% end %>
</div>
