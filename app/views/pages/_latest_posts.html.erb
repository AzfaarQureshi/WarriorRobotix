<div class="home-info small-margin-top row">
  <div class="col s12 large-margin-bottom">
    <h5 class="flow-text">Latest Posts</h5>
  </div>
  <% Post.where(type: nil).order(created_at: :DESC).limit(3).select(:id, :title, :description) do |post| %>
  <div class="col s12 m6 l4">
    <div class="card-panel">
      <div class="latest-post-box card-content">
        <div class="title"><%= link_to post.title, post_path(post.id) %></div>
        <div class="description markdown">
          <%= markdown(truncate(post.description, :length => 300)) %>
        </div>
        <div class="read-more"><%= link_to "Read More", post_path(post.id) %></div>
      </div>
    </div>
  </div>
  <% end %>
</div>
