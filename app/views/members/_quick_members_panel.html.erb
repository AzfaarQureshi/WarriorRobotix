<div class="card-panel hide-on-small-only quick-members-panel">
  <div class="row no-margin-bottom">
    <div class="col s12">
      <ul class="tabs">
        <li class="tab col s3"><a class="active" href="#general_tab_wrap"><i class="tiny material-icons">dashboard</i>General</a></li>
        <li class="tab col s3"><a href="#registration_wrap"><i class="tiny material-icons">assignment</i>Registration</a></li>
      </ul>
    </div>
    <div id="general_tab_wrap" class="col s12 compact-form-wrap center-align">
      <% if member_is_admin? %>
      <p>
        <%= link_to new_member_path, class: "btn-text" do %>
        Create Member
        <% end %>
      </p>
      <% end %>
      <p>
        <%= link_to email_path, class: "btn-text" do %>
        Update my email
        <% end %>
      </p>
      <p>
        <%= link_to password_path, class: "btn-text" do %>
        Update my password
        <% end %>
      </p>
    </div>
    <%= member_is_admin? ? render('registration_menu') : render('registration_info') %>
  </div>
  <div class="preloader-container">
    <%= render "components/spinner", color: "yellow" %>
  </div>
</div>
<div class="quick-links card-panel hide-on-med-and-up">
  <div class="row">
    <%= link_to email_path, class: "btn col s12" do %>
    <i class="material-icons left">person add</i>Update my email
    <% end %>

    <%= link_to password_path, class: "btn col s12" do %>
    <i class="material-icons left">person add</i>Update my password
    <% end %>

    <% if member_is_admin? %>
    <%= link_to new_post_path, class: "btn col s12" do %>
    <i class="material-icons left">person add</i>Create Member
    <% end %>

    <%= link_to new_event_path, class: "btn col s12" do %>
    <i class="material-icons left">assignment</i>Manage Registration Form
    <% end %>
    <% end %>

    <%= link_to register_url, class: "btn col s12" do %>
    <i class="material-icons left">assignment</i>Registration
    <% end %>

    <%= link_to r_url, class: "btn col s12" do %>
    <i class="material-icons left">assignment</i>Registration (Short Link)
    <% end %>
  </div>
</div>
