<div class="max6">
<h1 class="flow-text"><%= params[:type].to_s.capitalize %> Password</h1>
<div class="card-panel" style="padding-bottom:10px;padding-top:10px;">
<%= form_tag do %>
<%= errors_for @member %>
<div class="row">
  <div class="col s12  input-field">
    <%= label_tag :password %>
    <%= password_field_tag :password %>
  </div>
  <div class="col s12  input-field">
    <%= label_tag :password_confirmation %>
    <%= password_field_tag :password_confirmation %>
  </div>
</div>
<div class="actions row">
  <button type="submit" name="commit" class="btn waves-effect waves-light"><%= params[:type].to_s.capitalize %></button>
</div>
<% end %>
</div>
</div>
