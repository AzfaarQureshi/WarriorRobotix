<div id="registration_wrap" class="col s12 compact-form-wrap">
  <div class="row">
    <% valid_fields = RegistrationForm.valid_registration_fields? %>
    <div class="col m4 l3 right-align" style="padding-top:1.4rem;">
      <%= render 'registrations/toggle_form', valid_fields: valid_fields %>
    </div>
    <div class="col m8 l9">
      <% if valid_fields %>
        <%= link_to 'Edit Fields', registration_fields_path, class: "btn-text", style: 'margin-top:1rem' %>
        <%= link_to register_url, register_url %>
      <% else %>
        Invalid form: Valid form requires first name, last name, email, grade, and student number fields.
        <br>
        <%= link_to 'Quick FIX', fix_registration_fields_path(), method: :post, class: "btn-text", data: { disable_with: nil } %>
      <% end %>
    </div>
  </div>
</div>
