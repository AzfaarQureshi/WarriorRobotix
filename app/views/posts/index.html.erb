<p id="notice"><%= notice %></p>

<h1>Listing Posts</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Description</th>
      <th>Restriction</th>
      <th>Original Author</th>
      <th>Created At</th>
      <% if member_is_admin? %>
      <th colspan="3"></th>
      <% else %>
      <th></th>
      <% end %>
    </tr>
  </thead>

  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td><%= post.title %></td>
        <td><%= post.description %></td>
        <td><%= post.restriction.capitalize %></td>
        <td><%= post.member.full_name unless post.member.nil? %></td>
        <td><%= post.created_at.strftime("%a, %e %b %Y %H:%M") %></td>
        <td><%= link_to 'Show', post %></td>
        <% if member_is_admin? %>
        <td><%= link_to 'Edit', edit_post_path(post) %></td>
        <td><%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

