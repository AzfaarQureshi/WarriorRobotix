<!DOCTYPE html>
<html>
<head>
  <title>WarriorRobotix</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
<nav>
  <span>
  <%= link_to "WarriorRobotix", root_path %>
  <%= white_spaces(4) %>
  </span>
  <span style="float:right;">
  <%= link_to "Posts", posts_path %>
  <%= white_spaces(2) %>
  <%= link_to "Members", members_path %>
  <%= white_spaces(4) %>
<% if member_signed_in? %>
  Hi, <%= current_member.first_name %> <%= current_member.last_name %> <%= "(admin)" if member_is_admin? %> <%= link_to "Sign out", signout_path(return_to_info), method: :delete %>
<% else %>
  <%= link_to "Sign in", signin_path(return_to_info) %>
<% end %>
</span>
</nav>
<hr/>

<%= yield %>

</body>
</html>
